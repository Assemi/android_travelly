<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SurveyActivity"
    tools:showIn="@layout/activity_survey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin_ex"
    android:paddingLeft="@dimen/activity_horizontal_margin_ex"
    android:paddingRight="@dimen/activity_horizontal_margin_ex"
    android:paddingTop="@dimen/activity_vertical_margin_ex"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <!-- Survey picker -->
            <!--TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SELECT SURVEY:" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Spinner
                android:id="@+id/spinner_surveys"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_start_survey"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Survey" />

            <TextView
                android:id="@+id/textview_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /-->

            <!-- Travel day question 1 -->
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Where were you at 04:00AM on the morning of your Travel Day?"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerPassedDayStart"
                android:layout_gravity="end"
                android:spinnerMode="dropdown"
                android:entries="@array/array_day_start"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- Travel day question 2 -->
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="did you leave this place at all on your Travel Day?"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerPassedDayLeave"
                android:layout_gravity="end"
                android:spinnerMode="dropdown"
                android:entries="@array/array_yesno"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- Travel day question 3 -->
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Did you undertake any of the following activities from this place after 4AM on your Travel Day?"/>
            <CheckBox android:id="@+id/chkPassedActivity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walking e.g. dog walk or walk to the shops"/>
            <CheckBox android:id="@+id/chkPassedActivity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cycling e.g. recreational ride"/>
            <CheckBox android:id="@+id/chkPassedActivity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short drive e.g. to the shops"/>
            <CheckBox android:id="@+id/chkPassedActivity4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do not leave this place for any travel activities"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- Travel day question 4 -->
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Please give a reason as to why you did not leave this place at all on your Travel Day?" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtPassedDayNotLeaveReason" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- Travel day question 5 -->
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="When did you last leave this place before your Travel Day?" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtPassedDayLastLeave" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
    </LinearLayout>
</ScrollView>
